@page
@model RegisterModel

<h1>@ViewData["Title"]</h1>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
<link rel="stylesheet" href="~/style.css" />
<div class="container">
    <div class="card bg-light">
        <section class="card-body mx-auto" style="max-width: 400px;">
            <h4 class="card-title mt-3 text-center">Create Account</h4>
            <section>
                @{
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @{
                                    foreach (var provider in Model.ExternalLogins)
                                    {
                                        switch (provider.Name)
                                        {
                                            case "Google":
                                                <button type="submit" class="btn btn-block btn-google" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="fab fa-google"></i>   Login via Google</button>
                                                break;

                                            case "Facebook":
                                                <button type="submit" class="btn btn-block btn-facebook" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account"><i class="fab fa-facebook-f"></i>   Login via Facebook</button>
                                                break;
                                        }
                                    }
                                }
                            </p>
                        </div>
                    </form>
                }
            </section>
            <p class="divider-text">
                <span class="bg-light">OR</span>
            </p>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="ConfirmPassword" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Create Account  </button>
                </div>
                <p class="text-center">Have an account? <a asp-area="identity" asp-page="login">Log In</a> </p>
            </form>
        </section>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
